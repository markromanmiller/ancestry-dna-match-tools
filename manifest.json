{
  "manifest_version": 3,
  "name": "Angel Dots",
  "description": "Add more dots to your Ancestry DNA matches page",
  "version": "0.1",
  "action": {
    "default_popup": "hello.html",
    "default_icon": "img/hi_icon.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.ancestry.com/discoveryui-matches/*"],
      "js": ["js/colors.js", "js/ancestry.js", "js/dotedit.js"],
      "css": ["style.css"]
    }
  ],
  "permissions": [
    "storage"
  ],
  "web_accessible_resources": [
    {
      "resources": ["/img/*"],
      "matches": ["https://www.ancestry.com/*"]
    }
  ]
}